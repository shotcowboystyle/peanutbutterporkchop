{
  "extends": [
    "@nuxtjs/eslint-config-typescript",
    "plugin:nuxt/recommended",
    "../../../.eslintrc.json"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx", "*.vue"],
      "rules": {
        "semi": "off",
        "comma-dangle": "off",
        "space-before-function-paren": "off"
      }
    },
    {
      "files": ["*.vue"],
      "rules": {
        "vue/multi-word-component-names": "off",
        "vue/no-multiple-template-root": "off"
      }
    }
  ]
}
